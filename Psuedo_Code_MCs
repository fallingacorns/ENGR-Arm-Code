#include <Servo.h>
Servo MC;
void setup(){
  int inputPin = x;
  int stored = 0; //stores the on/off value of the servo
  pinMode(inputPin, INPUT);
  Servo MC;
  int position = 0; //stores the position of the servo
  //will be whatever the input pin for the specific motor controller is
  myservo.attach(inputPin);
}
void loop(){
  stored = digitalRead(inputPin);
  if(stored == HIGH){
    //this activates the motor in order to do create a motion
    for (position of the servo){
      myservo.write(position);
      delay();
      //delay to be figured out after
    }

  }
  else if(stored == LOW){
    break;
  }
}
